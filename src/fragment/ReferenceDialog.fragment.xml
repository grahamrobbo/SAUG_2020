<core:FragmentDefinition xmlns:core="sap.ui.core"
  xmlns="sap.m">
  <Dialog title="{i18n>referenceTitle}">
    <List id="refList">
      <CustomListItem>
        <HBox>
          <core:Icon src="sap-icon://sap-ui5"
            size="2rem"
            color="#0854a0" />
          <Link text="SAPUI5 Documentation"
            href="https://sapui5.hana.ondemand.com/"
            target="_blank" />
        </HBox>
      </CustomListItem>
      <CustomListItem>
        <HBox>
          <core:Icon src="sap-icon://download-from-cloud"
            size="2rem"
            color="#0854a0" />
          <Link text="Download SAPUI5 SDK"
            href="https://tools.hana.ondemand.com/#sapui5"
            target="_blank" />
        </HBox>
      </CustomListItem>
      <CustomListItem>
        <HBox>
          <core:Icon src="sap-icon://education"
            size="2rem"
            color="#0854a0" />
          <Link text="Routing &amp; Navigation - Enabling Routing in Nested Components"
            href="https://sapui5.hana.ondemand.com/#/topic/fb19f501b16e4e4991eb6a017770945b"
            target="_blank" />
        </HBox>
      </CustomListItem>
      <CustomListItem>
        <HBox>
          <core:Icon src="sap-icon://education"
            size="2rem"
            color="#0854a0" />
          <Link text="Routing &amp; Navigation - Working with Multiple Targets"
            href="https://sapui5.hana.ondemand.com/#/topic/2c5c84d207d246bc9f733f29df1ff892"
            target="_blank" />
        </HBox>
      </CustomListItem>
      <CustomListItem>
        <HBox>
          <core:Icon src="sap-icon://education"
            size="2rem"
            color="#0854a0" />
          <Link text="sap.ui.core.routing.Router - Method navTo"
            href="https://sapui5.hana.ondemand.com/#/api/sap.ui.core.routing.Router%23methods/navTo"
            target="_blank" />
        </HBox>
      </CustomListItem>
      <CustomListItem>
        <HBox>
          <core:Icon src="sap-icon://education"
            size="2rem"
            color="#0854a0" />
          <Link text="sap.ui.core.routing.Router - Event titleChanged"
            href="https://sapui5.hana.ondemand.com/#/api/sap.ui.core.routing.Router%23events/titleChanged"
            target="_blank" />
        </HBox>
      </CustomListItem>
      <CustomListItem>
        <HBox>
          <core:Icon src="sap-icon://lab"
            size="2rem"
            color="#0854a0" />
          <Link text="Sample Application: Routing with nested components"
            href="https://sapui5.hana.ondemand.com/#/entity/sap.ui.core.routing.Router/sample/sap.ui.core.sample.RoutingNestedComponent"
            target="_blank" />
        </HBox>
      </CustomListItem>
    </List>
    <endButton>
      <Button text="Close"
        press="onRefDialogClose" />
    </endButton>
  </Dialog>
</core:FragmentDefinition>